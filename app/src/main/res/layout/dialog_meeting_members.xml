<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_member"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="380dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="12dp"
                android:src="@drawable/arrow_back2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="会议成员"
                android:textColor="@color/black" />

            <ImageView
                android:layout_marginRight="6dp"
                android:id="@+id/image_add"
                android:padding="10dp"
                android:src="@drawable/icon_chat_add"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/tab_members"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:singleLine="true"
                android:id="@+id/tab1"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center"

                android:textSize="16dp"
                android:textColor="@color/skyblue" />

            <TextView
                android:layout_below="@+id/tab1"
                android:id="@+id/indicator1"
                android:layout_width="72dp"
                android:layout_centerHorizontal="true"
                android:layout_height="4dp"
                android:background="@drawable/indicator_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_auditor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:singleLine="true"
                android:id="@+id/tab2"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="旁听者(3)"
                android:textSize="16sp"
                android:textColor="@color/c5" />

            <TextView
                android:visibility="invisible"
                android:layout_below="@+id/tab2"
                android:id="@+id/indicator2"
                android:layout_width="72dp"
                android:layout_centerHorizontal="true"
                android:layout_height="4dp"
                android:background="@drawable/indicator_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tab_invitors"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:singleLine="true"
                android:textSize="16sp"
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="被邀请人"
                android:textColor="@color/c5" />
            <TextView
                android:visibility="invisible"
                android:layout_below="@+id/tab3"
                android:id="@+id/indicator3"
                android:layout_width="72dp"
                android:layout_centerHorizontal="true"
                android:layout_height="4dp"
                android:background="@drawable/indicator_blue" />
        </RelativeLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager_members"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>

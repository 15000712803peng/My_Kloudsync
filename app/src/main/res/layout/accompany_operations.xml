<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/rc_grey_bg_shape"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/operation"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/syncll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/accompany_sync" />

                <TextView
                    android:id="@+id/synccontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="制作同步伴奏带"
                    android:textColor="@color/txt_color1"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/syncllnoaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/accompany_save" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="保存为伴奏"
                    android:textColor="@color/txt_color1"
                     />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/deletell"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/accompany_delete" />

                <TextView
                    android:id="@+id/tv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/mtdelete"
                    android:textColor="@color/txt_color1"
                   />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancelll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/accompany_cancel" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:text="@string/Cancel"
                 />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_favour"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/kk"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/spaceicon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/file" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/spaceicon2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_favour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:maxLines="2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time"
                android:textColor="@color/newgrey"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:clickable="true"
                android:id="@+id/lin_sync"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/teamusic" />

                <TextView
                    android:id="@+id/tv_synccount"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="25"
                    android:textSize="12sp"
                    android:textColor="@color/red" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/image_folder"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrow_down"
                    android:scaleType="fitStart" />

            </LinearLayout>


            <ImageView
                android:id="@+id/img_more"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:src="@drawable/more_favor" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_line" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/kk"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ECF0F2"
        android:paddingLeft="10dp"
        android:scrollbars="none"></ListView>

</RelativeLayout>
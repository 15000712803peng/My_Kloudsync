<?xml version="1.0" encoding="utf-8"?>
<com.kloudsync.techexcel.view.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/meeting_members_setting_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:angle="4dp"
    app:arrowHeight="8dp"
    app:arrowLocation="top"
    app:arrowPosition="140dp"
    app:arrowWidth="16dp"

    app:bubbleColor="@color/black">
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"/>

    <RelativeLayout
        android:id="@+id/layout_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="6dp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"
            android:text="显示当前公司联系人"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_company"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_company"
            android:src="@drawable/select_h"
            android:layout_width="18dp"
            android:layout_height="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_all"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="显示所有联系人"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_all"
            android:visibility="invisible"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_all"
            android:src="@drawable/select_h"
            android:layout_width="18dp"
            android:layout_height="18dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</com.kloudsync.techexcel.view.BubbleLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/meeting_setting_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/rc_white_bg_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="@string/satOptions" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_tab_titles"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/systemtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/satSystem"
                android:textColor="@color/skyblue" />

            <TextView
                android:id="@+id/systemtvline"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="110dp"
                android:background="@color/skyblue"
                android:layout_height="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/thirdaudiotv"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/thirdaudio"
                />

            <TextView
                android:id="@+id/thirdaudiotvline"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="110dp"
                android:visibility="gone"
                android:background="@color/skyblue"
                android:layout_height="2dp"/>
        </RelativeLayout>




    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/systemaudioll"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_dms_speaker"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/icon_audio_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/audio" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_micro"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/icon_micro_off" />

                <TextView
                    android:id="@+id/txt_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/micro" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_camera"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/icon_camera_off" />

                <TextView
                    android:id="@+id/txt_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/video" />
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/thirdaudioll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:maxLines="3"
                android:paddingRight="10dp"
                android:textSize="10sp"
                android:text="@string/thirdaudiopromat"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="45dp"
                        android:background="@drawable/skypebg"
                        android:gravity="center"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/skypeimage"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="Skype" />

                </LinearLayout>
                <LinearLayout

                    android:id="@+id/openwenxin"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="45dp"
                        android:background="@drawable/weixinbg"
                        android:gravity="center"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="30dp"

                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="WeChat" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>







    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_recording"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dms_check"
            android:layout_marginLeft="26.5dp"
            android:src="@drawable/icon_uncheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:visibility="gone"
            android:layout_marginLeft="26.5dp"
            android:id="@+id/isOpenRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="开启录制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/txt_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/satOk"
            android:textColor="@color/skyblue"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/txt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/Cancel"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
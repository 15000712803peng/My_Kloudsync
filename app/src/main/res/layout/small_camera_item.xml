<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:padding="1dp"
    android:background="@drawable/gray_border"
    >

    <FrameLayout
        android:id="@+id/video_view_container"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/darkblack2"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="23dp">

        <TextView
            android:id="@+id/txt_name"
            android:ellipsize="end"
            android:textSize="8dp"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="tonyanaegag"
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_audio_status"
            android:src="@drawable/icon_command_mic_disable"
            android:layout_width="18dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/image_vedio_status"
            android:src="@drawable/icon_command_webcam_disable"
            android:layout_width="18dp"
            android:layout_height="20dp" />

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:textSize="14sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="12dp"
            android:text="选择"
            android:textColor="@color/newgrey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:id="@+id/txt_invite_as_member"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Invite as member"
                android:textColor="@color/txt_color1" />

            <ImageView
                android:layout_toRightOf="@id/txt_invite_as_member"
                android:id="@+id/image_invite_as_member"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="28dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/dui"
                android:visibility="visible" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:id="@+id/txt_invite_as_admin"
                android:padding="12dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Invite as admin user"
                android:textColor="@color/txt_color1" />

            <ImageView

                android:layout_toRightOf="@id/txt_invite_as_admin"
                android:id="@+id/image_invite_as_admin"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="28dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/dui"
                android:visibility="visible" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>

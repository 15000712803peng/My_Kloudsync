<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_gray_all_radius_13"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/create_folder"
            android:layout_marginTop="@dimen/dp_17"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorFont33"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_dialog_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorFont33"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:hint="@string/please_input_new_folder_name"
            android:textColorHint="@color/colorFont99"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/shape_white_all_radius_4"
            android:layout_below="@id/tv_dialog_title"/>

        <View
            android:id="@+id/view_dialog_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_below="@id/et_dialog_folder_name"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:layout_below="@id/view_dialog_divider"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/tab_blue"
                android:text="@string/base_cancel"
                android:textSize="@dimen/sp_17"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="@dimen/dp_05"
                android:background="@color/colorDivider"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_dialog_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorFont99"
                android:text="@string/base_enter"
                android:background="@null"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.kloudsync.techexcel.view.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/meeting_members_setting_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:angle="5dp"
    app:arrowHeight="10dp"
    app:arrowLocation="right"
    app:arrowPosition="30dp"
    app:arrowWidth="12dp"
    app:bubbleColor="@color/divider_line">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>

            <TextView
                android:id="@+id/txt_setting_presenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/wxf_presenter"
                android:drawablePadding="5dp"
                android:textColor="#999999"
                android:layout_marginBottom="10dp"
                android:text="@string/set_as_host"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_setting_speak_member"
                android:layout_marginBottom="14dp"
                android:textColor="#999999"
                android:visibility="gone"
                android:drawableLeft="@drawable/wxf_speakermember"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="@string/set_as_talkable_participant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_setting_auditor"
                android:layout_marginBottom="14dp"
                android:textColor="#999999"
                android:visibility="gone"
                android:drawableLeft="@drawable/wxf_member"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="@string/set_as_participant"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/txt_kick_off"
                android:layout_marginBottom="14dp"
                android:textColor="#999999"
                android:visibility="gone"
                android:drawableLeft="@drawable/wxf_leave"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="@string/kick_off_from_meeting"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>




</com.kloudsync.techexcel.view.BubbleLinearLayout>
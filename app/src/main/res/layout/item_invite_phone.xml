<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:id="@+id/layout_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login_info"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_edit_line">

        <TextView
            android:id="@+id/txt_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginRight="22dp"
            android:textColor="@color/newgrey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp" />


        <EditText
            android:layout_toRightOf="@id/tv_cphone"
            android:layout_centerVertical="true"
            android:id="@+id/edit_telephone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@android:color/transparent"
            android:hint="@string/please_input_invite_number"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/newgrey"
            android:textSize="14sp" />

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/v_line"
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="#ffd3d3d3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/tv_cphone"
            android:layout_marginStart="17dp" />

        <LinearLayout
            android:id="@+id/layout_select_role"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_role"
                    android:gravity="center_vertical"
                    android:text="@string/member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/member"
                    android:visibility="invisible" />
            </RelativeLayout>


            <ImageView
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_down"
                android:layout_width="20dp"
                android:padding="3dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
